{
    "name": "Spiking Neural Network",
    "type": "SpikingNet",
    "description": "An interconnected network of biologically-modeled neurons.",

    "racks": [
        {
            "title": "General",
            "fields": [
                {
                    "label": "Width",
                    "propName": "latticeWidth",
                    "type": "number",
                    "min": 1,
                    "max": 1000,
                    "default": 20
                },
                {
                    "label": "Height",
                    "propName": "latticeHeight",
                    "type": "number",
                    "min": 1,
                    "max": 1000,
                    "default": 20
                },
                {
                    "label": "Time scale",
                    "propName": "timeScale",
                    "type": "slider",
                    "max": 0.03,
                    "default": 0.03
                }
            ]
        },
        {
            "title": "Neuron behavior",
            "fields": [
                {
                    "label": "Inh. neuron noise",
                    "propName": "inhibitoryNoise",
                    "type": "slider",
                    "max": 50,
                    "default": 3
                },
                {
                    "label": "Exc. neuron noise",
                    "propName": "excitatoryNoise",
                    "type": "slider",
                    "max": 50,
                    "default": 5
                },
                {
                    "label": "Inh. portion",
                    "propName": "inhibitoryPortion",
                    "type": "slider",
                    "default": 0.2
                },
                {
                    "label": "Inh. neuron type",
                    "propName": "inhibitoryNeuronType",
                    "type": "select",
                    "enumName": "NeuronType",
                    "default": "ChatteringNeuron"
                },
                {
                    "label": "Exc. neuron type",
                    "propName": "excitatoryNeuronType",
                    "type": "select",
                    "enumName": "NeuronType",
                    "default": "ChatteringNeuron"
                }
            ]
        },
        {
            "title": "Learning",
            "fields": [
                {
                    "label": "STP strength",
                    "propName": "STPStrength",
                    "type": "slider",
                    "flag": true,
                    "max": 30,
                    "default": 1,
                    "flagDefault": false
                },
                {
                    "label": "STDP strength",
                    "propName": "STDPStrength",
                    "type": "slider",
                    "flag": true,
                    "max": 30,
                    "default": 1,
                    "flagDefault": false
                },
                {
                    "label": "Decay half life",
                    "propName": "decayHalfLife",
                    "type": "slider",
                    "flag": true,
                    "min": 0.1,
                    "max": 60,
                    "default": 10,
                    "flagDefault": false
                }
            ]
        }
    ],

    "help": [
        {
            "title": "SNN overview",
            "html_path": "help/snn_desc.html"
        },
        {
            "title": "Parameter help",
            "html_path": "help/snn_params.html"
        }
    ],

    "enumLabels": {
        "NeuronType": [
            "Spiking",
            "Spiking (rand.)",
            "Resonator",
            "Resonator (rand.)",
            "Chattering"
        ]
    }
}
